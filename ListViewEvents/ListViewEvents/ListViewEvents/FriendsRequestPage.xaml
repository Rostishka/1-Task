<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewEvents.FriendsRequestPage"
             Title="FriendsRequestPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <x:String x:Key="now">Current Time</x:String>
        </ResourceDictionary>
    </ContentPage.Resources>
    
  <ContentPage.Content>
      <StackLayout Padding="15">
          <Label Text="hey? What's time is it?"/>
           <Label Text="{DynamicResource now}"></Label>
      </StackLayout>
  </ContentPage.Content>
</ContentPage>